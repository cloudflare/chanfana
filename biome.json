{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["dist", "docs", "example"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "complexity": {
        "noBannedTypes": "off",
        "noThisInStatic": "off"
      },
      "suspicious": {
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
      "style": {
        "noParameterAssign": "off"
      }
    }
	}
}
